drop table INPUT_TABLE;
CREATE TABLE INPUT_TABLE(ID NUMBER(5));
INSERT ALL
INTO INPUT_TABLE VALUES(1)
INTO INPUT_TABLE VALUES(2)
INTO INPUT_TABLE VALUES(4)
INTO INPUT_TABLE VALUES(-1)
INTO INPUT_TABLE VALUES(-2)
INTO INPUT_TABLE VALUES(-3)
SELECT * FROM  DUAL;

SELECT * FROM INPUT_TABLE;

SELECT SUM(ID) FROM INPUT_TABLE;

SELECT 
SUM(CASE WHEN ID >0 THEN ID ELSE 0 END ) AS POSITIVE_TOTAL,
SUM(CASE WHEN ID <0 THEN ID ELSE 0 END) AS NEGATIVE_TOTAL
FROM INPUT_TABLE;
