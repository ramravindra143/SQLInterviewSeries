drop table EMP_SRC;
--Create a Table
CREATE TABLE EMP_SRC(EName VARCHAR2(20),SALARY NUMBER(10),DEPTID NUMBER(10));

--Inserting the data into Table
INSERT ALL 
INTO EMP_SRC VALUES ('Ravindra',1000,10)
INTO EMP_SRC VALUES ('Ram',2000,20)
INTO EMP_SRC VALUES ('Raghu',3000,10)
INTO EMP_SRC VALUES ('Charan',4000,10)
INTO EMP_SRC VALUES ('Surendra',5000,20)
INTO EMP_SRC VALUES ('Ramesh',6000,20)
INTO EMP_SRC VALUES ('SitaDevi',7000,20)
INTO EMP_SRC VALUES ('Sathish',8000,20)
SELECT * FROM DUAL;

select * from emp_src;


SELECT * FROM(SELECT ENAME,SALARY,DEPTID,NTILE(2) OVER(ORDER BY SALARY) AS GROUPING FROM EMP_SRC)A WHERE GROUPING=1;

SELECT * FROM (SELECT ENAME,SALARY,DEPTID,NTILE(2) OVER(PARTITION BY DEPTID ORDER BY SALARY ) AS GROUPING FROM EMP_SRC) 
A WHERE DEPTID=20 AND GROUPING=1;
